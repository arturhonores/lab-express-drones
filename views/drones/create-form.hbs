<div class="container mt-5 pt-5">
  <h2>Create a new drone</h2>
  <hr />
</div>
<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-8">
      <form action="/drones/create" method="POST">
        <div class="mb-3 mt-5">
          <label for="dronName" class="form-label">Name</label>
          <input type="text" class="form-control" id="dronName" name="name" />
        </div>

        <div class="mb-3">
          <label for="dronePropellers" class="form-label">Propellers</label>
          <input
            type="text"
            class="form-control"
            id="dronePropellers"
            name="propellers"
          />
        </div>

        <div class="mb-3">
          <label for="dronmaxSpeed" class="form-label">Max Speed</label>
          <input
            type="text"
            class="form-control"
            id="dronmaxSpeed"
            name="maxSpeed"
          />
        </div>
        <button type="submit" class="btn btn-dark">Create Drone</button>
      </form>
    </div>
  </div>

</div>