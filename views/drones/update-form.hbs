<div class="container mt-5 pt-5">
  <h2>Edit your Drone</h2>
  <hr />
</div>
<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-8">
      <form action="/drones/{{id}}/edit" method="POST">
        <div class="mb-3 mt-5">
          <label for="dronName" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="dronName"
            name="name"
            value="{{name}}"
          />
        </div>

        <div class="mb-3">
          <label for="dronePropellers" class="form-label">Propellers</label>
          <input
            type="text"
            class="form-control"
            id="dronePropellers"
            name="propellers"
            value="{{propellers}}"
          />
        </div>

        <div class="mb-3">
          <label for="dronmaxSpeed" class="form-label">Max Speed</label>
          <input
            type="text"
            class="form-control"
            id="dronmaxSpeed"
            name="maxSpeed"
            value="{{maxSpeed}}"
          />
        </div>
        <button type="submit" class="btn btn-dark">Save Drone</button>
      </form>
    </div>
  </div>

</div>